        {legend}
        {required && (
          <span className="required-indicator" aria-label="required">
            *
          </span>
        )}
      </legend>
      
      {children}
      
      {error && (
        <div 
          id={errorId}
          className="form-error"
          role="alert"
          aria-live="polite"
        >
          {error}
        </div>
      )}
    </fieldset>
  );
