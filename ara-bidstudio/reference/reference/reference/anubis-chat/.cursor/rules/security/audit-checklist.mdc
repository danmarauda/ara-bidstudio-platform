  id: string;
  severity: 'critical' | 'high' | 'medium' | 'low' | 'info';
  category: 'authentication' | 'authorization' | 'data-protection' | 'smart-contract' | 'infrastructure';
  title: string;
  description: string;
  impact: string;
  likelihood: 'high' | 'medium' | 'low';
  riskScore: number; // 1-10
